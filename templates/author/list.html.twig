{% if authors is defined and authors is not empty %}
<table border="2">
    <tr>
        <td>ID</td>
        <td>Picture</td>
        <td>UserName</td>
        <td>Email</td>
        <td>Number Of Books</td>
        <td>Details</td>
    </tr>
    {%set tt_nb_auteur = 0 %}
    {%set tt_nb_books = 0 %}
    {%for author in authors%}
    <tr>
        <td>{{author.id}}</td>
        <td><img src="{{asset(author.picture)}}"style="width:50px;height:50px;"></td>
        <td>{{author.username|upper}}</td>
        <td>{{author.email}}</td>
        <td>{{author.nbbooks}}</td>  
        <td><a href="{{path('auhtorDetails',{'id': author.id})}}">Details</a></td>
    </tr>
    {% set tt_nb_auteur = tt_nb_auteur + 1 %}
    {% set tt_nb_books = tt_nb_books + author.NbBooks %}
    {%endfor%}
</table>
nombre d'auteurs:{{tt_nb_auteur}} <br>
nombre de livres total :{{tt_nb_books}} <br>
{%else%}
is empty
{%endif%}